#!/usr/bin/env bash

function github() {

  # Set default of page 1, 100 per page
  page="${3:-1}"
  per_page="${4:-100}"

	curl -sLu "$MY_GH_CREDS" "https://api.github.com$2?per_page=$per_page&page=$page"
}

case $1 in

  github | gh)
    github "$@"
    ;;

  *)
    echo "usage: api github [page] [per_page]"
    echo "  api gh /repos/user/repo/commits 3 40"
	exit
    ;;
esac
